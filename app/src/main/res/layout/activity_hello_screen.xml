<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context=".main.HelloActivity">

  <RelativeLayout
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
      android:id="@+id/ll_hello_screen_title"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical">

      <ImageView
        android:id="@+id/hello_screen_start_logo"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginTop="25sp"
        android:src="@drawable/logo"
        android:layout_marginBottom="25sp"
        android:gravity="center" />

      <TextView
        android:id="@+id/txt_welcome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="25sp"
        android:layout_marginBottom="55sp"
        android:gravity="center"
        android:text="Welcome!"
        android:textSize="50sp" />
    </LinearLayout>

    <ScrollView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@id/ll_hello_screen_title">

      <TableLayout
        android:id="@+id/hello_screen_table"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:shrinkColumns="0,1,2,3"
        android:stretchColumns="0,1,2,3"
        android:weightSum="0.8">

        <TableRow
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal">

          <Button
            android:id="@+id/btn_Keypad"
            style="@style/BtnHelloScreenStyle"
            android:layout_column="0"
            android:layout_span="4"
            android:backgroundTint="@color/md_blue_900"
            android:text="@string/btn_Keypad_text" />
        </TableRow>
